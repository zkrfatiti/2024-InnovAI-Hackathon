<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@android:color/white"
    tools:context=".secondActivity"
    tools:openDrawer="start">

    <!-- Layout principal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:title="Catégories"
            android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar" />

        <!-- TableLayout pour organiser les boutons sous forme de tableau -->
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:padding="16dp"
            android:stretchColumns="1"
            android:gravity="center">

            <!-- Ligne 1 -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- 1er bouton -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:gravity="center"
                        android:text="الاجانب المقيمون بالمغرب"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />

                    <ImageButton
                        android:id="@+id/ikon_ajanib"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@android:drawable/alert_light_frame"
                        android:scaleType="centerInside"
                        android:src="@drawable/ajanib_mokimoun" />
                </LinearLayout>

                <!-- 2ème bouton -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:gravity="center"
                        android:text="السياح الاجانب"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />

                    <ImageButton
                        android:id="@+id/ikon_soyah"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@android:drawable/alert_light_frame"
                        android:scaleType="centerInside"
                        android:src="@drawable/citizenship_travel" />
                </LinearLayout>
            </TableRow>

            <!-- Ligne 2 -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- 3ème bouton -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:gravity="center"
                        android:text="المغارب المقيمون"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />

                    <ImageButton
                        android:id="@+id/ikon_lmaghariba"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@android:drawable/alert_light_frame"
                        android:scaleType="centerInside"
                        android:src="@drawable/moroccan_residents" />
                </LinearLayout>

                <!-- 4ème bouton -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:gravity="center"
                        android:text="المغارب بالخارج"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />

                    <ImageButton
                        android:id="@+id/ikon_magharibabilkharij"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@android:drawable/alert_light_frame"
                        android:scaleType="centerInside"
                        android:src="@drawable/moroccans_abroad" />
                </LinearLayout>
            </TableRow>

        </TableLayout>
    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#FFFFFF"
        android:fitsSystemWindows="true"
        android:visibility="gone"
        app:headerLayout="@layout/header"
        app:menu="@menu/main_menu" />
</androidx.drawerlayout.widget.DrawerLayout>
