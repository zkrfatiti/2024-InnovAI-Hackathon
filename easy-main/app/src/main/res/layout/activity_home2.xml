<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".homeActivity2"
    tools:openDrawer="start">

    <!-- Contenu principal de l'activité -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:title="Easy"
            android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar" />

        <!-- FrameLayout pour le contenu dynamique -->
        <FrameLayout
            android:id="@+id/content_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Layout pour le logo central et les logos entourants -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFFFF">

                <!-- Logo central (easy) -->
                <ImageButton
                    android:id="@+id/ikon_soyah"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:background="@drawable/nvkhada"
                    android:contentDescription="Easy Logo"
                    android:scaleType="centerInside"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/eeasy" />

                <!-- Logo en haut -->
                <ImageButton
                    android:id="@+id/logo_top"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/nvkhada"
                    android:contentDescription="Top Logo"
                    android:scaleType="centerInside"
                    app:layout_constraintBottom_toTopOf="@id/ikon_soyah"
                    app:layout_constraintEnd_toEndOf="@id/ikon_soyah"
                    app:layout_constraintStart_toStartOf="@id/ikon_soyah"
                    app:srcCompat="@drawable/khadaa" />

                <!-- Logo en bas -->
                <ImageButton
                    android:id="@+id/logo_bottom"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/nvkhada"
                    android:contentDescription="Bottom Logo"
                    android:scaleType="centerInside"
                    app:layout_constraintEnd_toEndOf="@id/ikon_soyah"
                    app:layout_constraintStart_toStartOf="@id/ikon_soyah"
                    app:layout_constraintTop_toBottomOf="@id/ikon_soyah"
                    app:srcCompat="@android:drawable/ic_menu_add" />

                <!-- Logo à gauche -->
                <ImageButton
                    android:id="@+id/logo_left"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/nvkhada"
                    android:contentDescription="Left Logo"
                    android:scaleType="centerInside"
                    app:layout_constraintBottom_toBottomOf="@id/ikon_soyah"
                    app:layout_constraintEnd_toStartOf="@id/ikon_soyah"
                    app:layout_constraintTop_toTopOf="@id/ikon_soyah"
                    app:srcCompat="@android:drawable/ic_menu_add" />

                <!-- Logo à droite -->
                <ImageButton
                    android:id="@+id/logo_right"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/nvkhada"
                    android:contentDescription="Right Logo"
                    android:scaleType="centerInside"
                    app:layout_constraintBottom_toBottomOf="@id/ikon_soyah"
                    app:layout_constraintStart_toEndOf="@id/ikon_soyah"
                    app:layout_constraintTop_toTopOf="@id/ikon_soyah"
                    app:srcCompat="@android:drawable/ic_menu_add" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </FrameLayout>
    </LinearLayout>



    <!-- NavigationView pour le menu latéral -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#FFFFFF"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/header"
        app:menu="@menu/main_menu" />
</androidx.drawerlayout.widget.DrawerLayout>
